- form_for @page do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
    %br
    .page_content_edit
      = f.label :content
      %br
      = f.text_area :content
      %br
      = link_to "textile supported", "http://redcloth.org/hobix.com/textile/", {:target => "_blank" }
  %p
    = f.submit
