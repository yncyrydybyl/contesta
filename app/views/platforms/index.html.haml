- title "Platforms"

%table
  %tr
    %th Name
    %th Description
    %th Shortname
  - for platform in @platforms
    %tr
      %td= platform.name
      %td= raw RedCloth.new(platform.description).to_html
      %td= platform.shortname
      %td= link_to 'Show', platform
      %td= link_to 'Edit', edit_platform_path(platform)
      %td= link_to 'Destroy', platform, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Platform", new_platform_path
