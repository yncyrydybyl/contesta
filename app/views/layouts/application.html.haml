!!!
%html
  %head
    %title meego coding competition 
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Coda:800'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Syncopate'
    = javascript_include_tag :defaults
    %script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22329272-2']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    = javascript_include_tag 'jquery.lightbox-0.5.pack'
    = csrf_meta_tag
    = favicon_link_tag '/images/favicon.ico'
    = auto_discovery_link_tag(:atom, submissions_url(:atom)) 
  %body
    .head.clickable{ :url => "/" }
      %h1
        c-base comlinc challenge 
      .categories
        %ul
          %li= link_to "submissions", submissions_path
          %li= link_to "categories", categories_path
          %li= link_to "participants", users_path

    #container
      -if flash[:alert] || flash[:warning] || flash[:notice]
        #notices
          =javascript_tag "$('#notices').delay(5000).fadeOut('slow');"

          .alert
            =flash[:alert]
          .warning
            =flash[:warning]
          .notice
            =flash[:notice]
          
      #holder
        = yield
    #footer
      = render :partial => "layouts/footer"
