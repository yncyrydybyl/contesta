!!!
%html
  %head
    %title meego coding competition 
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Coda:800'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Syncopate'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.lightbox-0.5.pack'
    = csrf_meta_tag
    = favicon_link_tag '/images/favicon.ico'
    = auto_discovery_link_tag(:atom, submissions_url(:atom)) 
  %body
    .head.clickable{ :url => "/" }
      %h1
        meego coding competition 
      .loginbox
        - if user_signed_in?
          = link_to current_user.email, edit_user_path(current_user)
          = link_to "Sign out", destroy_user_session_path
          .subs
            - if current_user.submissions
              you have #{current_user.submissions.size} submissions
              = link_to "add more", new_submission_path
            - else 
              = link_to "add a submission", new_submission_path
        - else
          = link_to "Sign up", new_user_registration_path
          = link_to "Sign in", new_user_session_path
      .categories
        %ul
          %li= link_to "submissions", submissions_path
          %li= link_to "categories", categories_path
          %li= link_to "participants", users_path

    #container
      -if flash[:alert] || flash[:warning] || flash[:notice]
        #notices
          =javascript_tag "$('#notices').delay(5000).fadeOut('slow');"

          .alert
            =flash[:alert]
          .warning
            =flash[:warning]
          .notice
            =flash[:notice]
          
      #holder
        = yield
    #footer
      = render :partial => "layouts/footer"
    = javascript_include_tag 'ga' 
